@model LoginRequestDTO
<form method="post">
    <div class="row">
        <div class="col-3">&nbsp;</div>
        <div class="card col-6 shadow border-0 mt-4">
            <div class="card-header bg-light bg-gradient ml-0 py-3">
                <div class="row">
                    <div class="col-12 text-center">
                        <h1 class="text-white">Login</h1>
                    </div>

                </div>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-sm-12">
                    <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                        <input asp-for="UserName" class="form-control" placeholder="Username..."/>
                        <span asp-validation-for="UserName" class="text-danger"/>
                    </div>
                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                        <input asp-for="Password" class="form-control" placeholder="Password..."/>
                        <span asp-validation-for="Password" class="text-danger"/>
                    </div>
                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                        <button type="submit" class="form-control btn btn-success" value="Submit">Login</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">&nbsp;</div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
